<div class="twelve columns box">
	<h3>Actions</h3>

	<table class="actions">
		<tr>
			<th>Type</th>
			<th>Price</th>
			<th>When</th>
		</tr>
		{{#each actions}}
		<tr>
			<td>{{type}}</td>
			<td>R{{price}}</td>
			<td><span class="hidden">{{timestamp}} - </span>{{relative}}</td>
		</tr>
		{{/each}}
		<tr>
			<th>Total</th>
			<td colspan="2">R{{total}}</td>
		</tr>
	</table>
</div>