<div class="twelve columns box">
<h3>Actions</h3>

<table>
	<tr>
		<th>Type</th>
		<th>Price</th>
		<th>When</th>
	</tr>
	{{#each actions}}
	<tr>
		<td>{{type}}</td>
		<td>R{{cost}}</td>
		<td>{{timestamp}} - {{relative}}</td>
	</tr>
	{{/each}}
	<tr>
		<td>Total</td>
		<td colspan="2">R{{total}}</td>
	</tr>
</table>
</div>